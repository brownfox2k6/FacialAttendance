/*---------- QMainWindow ----------*/
QMainWindow {
    background-color: rgb(248, 249, 250);
    color: rgb(0, 0, 0);
}

/*---------- QComboBox ----------*/
QComboBox {
    border: 1px solid rgb(150, 150, 150);
    border-radius: 8px;
    padding-left: 7px;
    padding-right: 7px;
    padding-top: 4px;
    padding-bottom: 4px;
}
QComboBox:hover {
    border: 1px solid rgb(159, 205, 179);
}
QComboBox:focus {
    border: 2px solid rgb(33, 115, 70);
}

/*---------- QDateEdit ----------*/
QDateEdit {
    border: 1px solid rgb(150, 150, 150);
    border-radius: 8px;
    padding-left: 7px;
    padding-right: 7px;
    padding-top: 4px;
    padding-bottom: 4px;
}
QDateEdit:hover {
    border: 1px solid rgb(159, 205, 179);
}
QDateEdit:focus {
    border: 2px solid rgb(33, 115, 70);
}

/*---------- QLabel ----------*/
QLabel {
    color: rgb(0, 0, 0);
}

/*---------- QLineEdit ----------*/
QLineEdit {
    border: 1px solid rgb(150, 150, 150);
    border-radius: 8px;
    padding-left: 7px;
    padding-right: 7px;
    padding-top: 4px;
    padding-bottom: 4px;
}
QLineEdit:hover {
    border: 1px solid rgb(159, 205, 179);
}
QLineEdit:focus {
