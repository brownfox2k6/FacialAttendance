/*---------- QPushButton ----------*/
QPushButton {
    border: 1px solid rgb(150, 150, 150);
    border-radius: 5px;
    padding-left: 5px;
    padding-right: 5px;
    padding-top: 5px;
    padding-bottom: 5px;
}
QPushButton:hover {
    border: 1px solid rgb(159, 205, 179);
    background-color: rgb(233, 245, 238);
}
QPushButton:pressed {
    border: 1px solid rgb(159, 205, 179);
    background-color: rgb(159, 205, 179);
}

QTableView {
    background-color: rgb(248, 249, 250);
    border: 1px solid rgb(45, 163, 208)
}
